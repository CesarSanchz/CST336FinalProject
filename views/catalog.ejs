<%- include ('partials/header.ejs') %>
<body>
    <h1> Catalog </h1>
    <main>
        <form>
            <h2> Keyword </h2>
            <input id="make" type="search" placeholder="Enter a word">
            <br>
            <h2> Manufacturer </h2>
            <input id="manufacturer" type="search" placeholder="Enter a word">
            <br>
        <h2> Type </h2>
        <select name="type" id="partType">
            <option value=""> Select One</option>
            <option value="ram">RAM</option>
            <option value="Hard Drive">Hard Drive</option>
            <option value="graphics">Graphics Card</option>
            <option value="motherboard">Motherboard</option>
            <option value="cpu">CPU</option>
        </select>
        </form>
        <br><br>
        <button type="button" id="btnSearch" class="btn btn-primary">Search</button>
        <br><br>
        <span id="searchError"></span><br>
        <div class="container">
            <div id="shoppingCart">
                    <table >
                        <th>
                            <tr>
                                <th>ID</th>
                                <th>Picture</th>
                                <th>Name</th>
                                <th>Model</th>
                                <th>Manufacturer</th>
                                <th>Component</th>
                                <th>Price</th>
                                <th>Button</th>
                            </tr>
                        </th>
                        <tbody id="productPage"></tbody>
                    </table>
            </div>
        </div>
    </main>


